{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true, 
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "esnext.asynciterable", "DOM"],
    "types": ["node"],
    "baseUrl": "../subgraph-template-typescript-apollo-server-boilerplate",
    "paths": {
      "*": ["types/*"]
    }
  },
  "exclude": [
    "codegen.ts", "dist", "src/__tests__"]
}
