{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true, 
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext", "esnext.asynciterable", "DOM"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@test-utils/*": ["shared/test-utils/*"],
      "@patients/*": ["apps/patients-service/src/*"],
      "@providers/*": ["apps/providers-service/src/*"],
      "@recommendations/*": ["apps/recommendations-service/src/*"],
      "@recommendation-items/*": ["apps/recommendation-items-service/src/*"],
      "@institutions/*": ["apps/institutions-service/src/*"],
      "@epic-api/*": ["apps/epic-api-service/src/*"],
      "@epic-mock/*": ["apps/epic-mock-service/src/*"],
      "@gateway/*": ["gateway/*"]
    }
  },
  "include": ["apps/**/*", "shared/**/*", "tests/**/*", "gateway/**/*"],
  "exclude": ["codegen.ts", "dist", "node_modules"]
}
