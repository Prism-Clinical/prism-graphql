{
  "name": "healthcare-graphql-federation",
  "version": "1.0.0",
  "description": "Healthcare GraphQL Federation with Apollo Federation 2.10, PostgreSQL, Redis, and Epic FHIR integration",
  "private": true,
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "npm run start:gateway",
    "start:gateway": "cd gateway && npm start",
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:patients\" \"npm run dev:providers\"",
    "dev:gateway": "cd gateway && npm run dev",
    "dev:patients": "cd apps/patients-service && npm run dev",
    "dev:providers": "cd apps/providers-service && npm run dev",
    "dev:recommendations": "cd apps/recommendations-service && npm run dev",
    "dev:recommendation-items": "cd apps/recommendation-items-service && npm run dev",
    "dev:institutions": "cd apps/institutions-service && npm run dev",
    "dev:epic-api": "cd apps/epic-api-service && npm run dev",
    "dev:epic-mock": "cd apps/epic-mock-service && npm run dev",
    "build": "npm run build:services && npm run build:gateway",
    "build:services": "concurrently \"npm run build:patients\" \"npm run build:providers\" \"npm run build:recommendations\" \"npm run build:recommendation-items\" \"npm run build:institutions\" \"npm run build:epic-api\"",
    "build:patients": "cd apps/patients-service && npm run build",
    "build:providers": "cd apps/providers-service && npm run build",
    "build:recommendations": "cd apps/recommendations-service && npm run build",
    "build:recommendation-items": "cd apps/recommendation-items-service && npm run build",
    "build:institutions": "cd apps/institutions-service && npm run build",
    "build:epic-api": "cd apps/epic-api-service && npm run build",
    "build:gateway": "cd gateway && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=\"__tests__\"",
    "test:integration": "jest --testPathPattern=\"tests/integration\"",
    "test:patients": "cd apps/patients-service && npm test",
    "test:providers": "cd apps/providers-service && npm test",
    "test:recommendations": "cd apps/recommendations-service && npm test",
    "test:recommendation-items": "cd apps/recommendation-items-service && npm test",
    "test:institutions": "cd apps/institutions-service && npm test",
    "test:epic-api": "cd apps/epic-api-service && npm test",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf apps/*/dist gateway/dist shared/*/dist coverage"
  },
  "dependencies": {
    "@apollo/server": "^4.3.3",
    "@apollo/subgraph": "^2.3.1",
    "apollo-server-errors": "^3.3.1",
    "graphql": "latest",
    "graphql-tag": "latest",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@apollo/gateway": "^2.10.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.0",
    "@types/jest": "^29.0.3",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.3",
    "nock": "^13.4.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "graphql",
    "federation",
    "healthcare",
    "apollo",
    "postgresql",
    "redis",
    "epic",
    "fhir"
  ]
}
